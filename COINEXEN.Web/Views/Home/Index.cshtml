<div class="container p-5 contact my-5">
    <div class="text-center py-4 ">
        <h2>Bizimle İletişime Geçin</h2>
    </div>
    @if (User.Identity.IsAuthenticated)
    {

         <form asp-action="Message" asp-controller="Home" method="post">
            <div class="row">

                <div class="col-md-7 px-2 pt-4 text-center" style="color:#f4e185; font-size:20px">
                    Sayın <strong>@User.Identity.Name</strong>, mesaj konunuzu ve mesaj içeriğini giriniz!
                </div>
                <div class="col-md-5 px-2">
                    <label name="TopicTitle" class="control-label  my-2 text-white px-5"></label>
                    <select name="TopicTitle" asp-items="@new SelectList(Enum.GetValues(typeof(TopicTitle)))" class="form-control">
                        <option>Konu Başlığı</option>
                    </select>
                </div>

                <div class="col-md-12 px-2">
                    <label for="validationTextarea" class="form-label">Mesajınız</label>
                    <textarea class="form-control py-3 " id="validationTextarea" name="Details" placeholder="Mesajınızı Yazınız" required></textarea>

                </div>
                <div class="col-12 text-center my-4">

                    <input type="submit" id="go" value="Gönder" class="btn btn-outline-warning btn-lg px-5 py-2" />


                </div>

            </div>

         </form>
    }
    else
    {
        <form asp-action="Message" asp-controller="Home" method="post">
            <div class="row">
                <div class="col-md-4 px-2">
                    <label for="validationDefault01" class="form-label">Adınız</label>
                    <input type="text" class="form-control py-3" name="Name" id="validationDefault01" required placeholder="Ad">
                </div>
                <div class="col-md-4 px-2">
                    <label for="validationDefault02" class="form-label">Soyadınız</label>
                    <input type="text" class="form-control py-3" name="Surname" id="validationDefault02" required placeholder="Soyad">

                </div>
                <div class="col-md-4 px-2">
                    <label for="validationDefaultUsername" class="form-label">Telefon Numaranız</label>
                    <div class="input-group">
                        <span class="input-group-text" id="inputGroupPrepend2">+90</span>
                        <input type="text" class="form-control py-3" id="validationDefaultUsername" name="PhoneNumber" aria-describedby="inputGroupPrepend2" required placeholder="Telefon Numarası">
                    </div>
                </div>
                <div class="col-md-4 px-2">
                    <label for="validationDefault01" class="form-label">E-posta Adresiniz</label>
                    <input type="email" class="form-control py-3" name="EMail" id="validationDefault01" required placeholder="E-posta">

                </div>
                <div class="col-md-3 px-2">
                    <label name="City" class="control-label  my-2 text-white px-5"></label>
                        <select name="City" asp-items="@new SelectList(Enum.GetValues(typeof(City)))" class="form-control">
                            <option>Şehir</option>
                        </select>
                </div>
                <div class="col-md-5 px-2">
                    <label name="TopicTitle" class="control-label  my-2 text-white px-5"></label>
                    <select name="TopicTitle" asp-items="@new SelectList(Enum.GetValues(typeof(TopicTitle)))" class="form-control">
                        <option>Konu Başlığı</option>
                    </select>
                </div>
                <div class="col-md-12 px-2">
                    <label for="validationTextarea" class="form-label">Mesajınız</label>
                    <textarea class="form-control py-3 " id="validationTextarea" name="Details" placeholder="Mesajınızı Yazınız" required></textarea>
                </div>
                <div class="col-12 text-center my-4">

                    <input type="submit" value="Gönder" id="go"   class="btn btn-outline-warning btn-lg px-5 py-2" />
                </div>
            </div>

        </form>

       
    }
</div>

