@model LoginViewModel
@{
    ViewBag.Title = "Login";
}
<title>Giriş</title>
<form asp-action="Login" asp-controller="Account" method="post">
    <div class="form-horizontal p-5 container">
        <div class="text-center text-white">
            <div class="text-end mb-2">
                <a asp-action="Register" asp-controller="Account" class="btn btn-warning">Kayıt Ol</a>
            </div>
            <h4 style="display:inline-block">Giriş Yap</h4>
        </div>
        <hr />
        <div class="row justify-content-md-center">
            <div class="form-group col-md-3 text-center ">
                <label asp-for="@Model.UserName" class="control-label  my-2 text-white">Kullanıcı Adı</label>
                <input type="text" asp-for="@Model.UserName" class="form-control">
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3 text-center">
                <label asp-for="@Model.Password" class="control-label  my-2 text-white">Şifre</label>
                <input type="password" asp-for="@Model.Password" class="form-control">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 p-5 text-center">
                <button class="btn btn-success">Giriş</button>
            </div>
        </div>
    </div>
</form>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

