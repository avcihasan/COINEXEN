@model COINEXEN.Core.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<title>Giriş</title>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal p-5 container">
        <div class="text-center text-white">
            <div class="text-end mb-2">
                @Html.ActionLink("Kayıt Ol", "Register", null, new { @class = "btn btn-warning" })
            </div>

            <h4 style="display:inline-block">Giriş Yap</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row justify-content-md-center">
            <div class="form-group col-md-3 text-center ">
                @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label  my-2 text-white" })
                <div >
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="form-group col-md-3 text-center">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label  my-2 text-white" })
                    <div class="text-center">
                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control psw" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
                <div class="form-group col-md-12 p-5 text-center">
                    <input type="submit" value="Giriş" class="btn btn-success" />
                </div>
            </div>
        </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

