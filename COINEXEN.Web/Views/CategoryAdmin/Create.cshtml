@model Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<title> Kategori Oluştur</title>

<form asp-action="Create" asp-controller="CategoryAdmin" method="post">

    <div class="form-horizontal pt-5">
        <div class="text-center" style="color:black">
            <h4>Yeni Kategori Ekleme</h4>
        </div>
        <hr />
        <div class="form-group">
            <label asp-for="@Model.Name" class="control-label col-md-12 my-2"></label>
            <div class="col-md-12">
                <input type="text" asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Description" class="control-label col-md-12 my-2"></label>
            <div class="col-md-12">
                <input type="text" asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center my-3">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<div class="text-center">
    <a asp-action="Index" asp-controller="CategoryAdmin" class="btn btn-warning">Kategori Listesine Dön</a>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
