@model Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title> Kategori Düzenle</title>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal pt-5">
        <div class="text-center " style="color:black">
            <h4>Kategori Düzenleme</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger " })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group ">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-12   px-5" })
            <div class="col-md-12  px-5">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control my-2 " } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-12 my-2 px-5" })
            <div class="col-md-12 px-5">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 mt-3 text-center">
                <input type="submit" value="Kaydet" class="btn btn-success" />
               
            </div>
        </div>
    </div>
}

  
        <div class="px-5 mt-2">
            @Html.ActionLink("Kategori Listesine Dön", "Index", null, new { @class = "btn btn-warning" })
        </div>
   



