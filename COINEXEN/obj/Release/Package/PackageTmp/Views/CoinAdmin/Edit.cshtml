                @Html.EditorFor(model => model.KısaKod, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KısaKod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            @Html.LabelFor(model => model.CategoryId, "CategoryId", htmlAttributes: new { @class = "control-label col-md-12  px-5 my-2" })
            <div class="col-md-12  px-5">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-12 text-center">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div class=" mb-5 text-center mt-2">
    <div class="px-5">
        
            @Html.ActionLink("Coin Listesine Dön", "Index",null,new { @class = "btn btn-warning" })
        
    </div>
</div>

